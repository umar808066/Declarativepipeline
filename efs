pipeline {
    agent {
        label 'dummy'
    }
    stages {
        stage('Pull') {
            steps {
                echo "Pulling from GitHub"
                git url: 'https://github.com/umar808066/EMPLOYEE-DECLARITIVE-', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                dir('EMPLOYEE-DECLARITIVE-/frontend/') {
                    // Run commands within the 'frontend' directory
                    sh '''
                    sudo apt update
                    sudo apt install -y nodejs npm
                    sudo npm install -g n
                    sudo n 14.17.0
                    sudo apt-get install git-all -y
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                dir('EMPLOYEE-DECLARITIVE-/frontend/') {
                    echo "Running tests"
                    sh '''
                    echo "Tests completed"
                    '''
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('EMPLOYEE-DECLARITIVE-/frontend/') {
                    sh '''
                    npm install
                    npm start &
                    echo "Deployment in progress"
                    '''
                }
            }
        }
    }
}
